<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                tools:background="#aaf3">


    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tv_hourly_time_label"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:text="12 PM"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_hourly_item_icon"
        android:src="@drawable/cloudy"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_hourly_time_label"
        android:layout_toEndOf="@+id/tv_hourly_time_label"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:id="@+id/tv_hourly_temp_label"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:text="100"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:layout_toLeftOf="@+id/tv_hourly_temp_label"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:id="@+id/tv_hourly_summary_label"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/img_hourly_item_icon"
        android:layout_toEndOf="@+id/img_hourly_item_icon"
        tools:text="Cloudy"/>
</RelativeLayout>