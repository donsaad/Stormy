<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingLeft="64dp"
                android:paddingRight="32dp"
                tools:background="#aaf3">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_circle"
        android:src="@drawable/bg_temperature"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_item_icon"
        android:src="@drawable/clear_night"
        android:layout_toRightOf="@+id/img_circle"
        android:layout_toEndOf="@+id/img_circle"
        android:layout_centerVertical="true"
        android:paddingLeft="9dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:id="@+id/tv_day_label"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/img_item_icon"
        android:layout_toEndOf="@+id/img_item_icon"
        android:paddingLeft="9dp"
        tools:text="Monday"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_temp_label"
        android:layout_alignTop="@+id/img_circle"
        android:layout_alignBottom="@+id/img_circle"
        android:layout_alignLeft="@+id/img_circle"
        android:layout_alignRight="@+id/img_circle"
        android:gravity="center"
        tools:text="100"/>
</RelativeLayout>